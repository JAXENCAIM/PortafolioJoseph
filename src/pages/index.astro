---
import Layout from '../layouts/Layout.astro';
import Hero from '../sections/Hero.astro';
import Experience from '../sections/Experience.astro';
import Education from '../sections/Education.astro';
---

<Layout title="Joseph Yauri Cajas // Ingeniero Civil · PUCP">
  <main>
    <Hero />
    <Experience />
    <Education />

    <!-- Contact Footer -->
    <footer class="section border-t border-slate-800" id="contacto">
      <div class="max-w-5xl mx-auto flex flex-col md:flex-row items-start md:items-center justify-between gap-8">
        <div>
          <p class="text-[10px] font-mono uppercase tracking-[0.5em] text-[#00f6ff] mb-3">03. Contacto</p>
          <h2 class="text-4xl md:text-6xl font-black uppercase tracking-tighter">
            Trabajemos<br/><span class="text-[#00f6ff]">Juntos.</span>
          </h2>
        </div>
        <div class="space-y-4">
          <p class="text-slate-400 font-mono text-sm">Lima, Perú · Disponible Globalmente</p>
          <a
            href="https://www.linkedin.com/in/josephyauri/"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-3 text-xs font-mono uppercase tracking-widest border border-slate-700 px-8 py-4 hover:border-[#00f6ff] hover:text-[#00f6ff] text-slate-400 transition-all"
          >
            LinkedIn →
          </a>
        </div>
      </div>
      <div class="max-w-5xl mx-auto mt-16 pt-8 border-t border-slate-900">
        <p class="text-[10px] font-mono text-slate-700 uppercase tracking-widest">
          Joseph Fred Yauri Cajas · Ingeniero Civil PUCP · {new Date().getFullYear()}
        </p>
      </div>
    </footer>
  </main>
</Layout>
